{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}

<article>
        <h2>{{ article.title }}</h2>
           <div class="metadata"> Écrit le {{ article.createdAt | date('d/m/Y')}} à {{ article.createdAt | date('H:m')}} dans la catégorie Politique </div>
           <div class="content">
                 <img src="{{ article.image }}" alt="">
              {{ article.content | raw }}
     </article>

     {% endblock %}